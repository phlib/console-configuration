{
    "name": "phlib/console-configuration",
    "type": "library",
    "description": "Console Configuration Helper implementation.",
    "keywords": ["symfony", "console", "configuration", "option", "helper"],
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Luke Richards"
        },
        {
            "name": "Phlib Team & Contributors",
            "homepage": "https://github.com/phlib/console-configuration/contributors"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/console": "^6 || ^7",
        "symfony/yaml": "^6 || ^7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "php-mock/php-mock-phpunit": "^2",
        "symplify/easy-coding-standard": "^12"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\ConsoleConfiguration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phlib\\ConsoleConfiguration\\": "tests/"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi"
    }
}
