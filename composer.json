{
    "name": "phlib/console-configuration",
    "type": "library",
    "description": "Console Configuration Helper implementation.",
    "keywords": ["symfony", "console", "configuration", "option", "helper"],
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Luke Richards"
        },
        {
            "name": "Phlib Team & Contributors",
            "homepage": "https://github.com/phlib/console-configuration/contributors"
        }
    ],
    "require": {
        "php": "^7.3",
        "symfony/console": "^5",
        "symfony/yaml": "^4|^5"
    },
    "require-dev": {
        "phpunit/phpunit": "^5",
        "php-mock/php-mock-phpunit": "^1",
        "symplify/easy-coding-standard": "^9"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\ConsoleConfiguration\\": "src/"
        }
    },
    "autoload-dev": {
       "psr-4": {
           "Phlib\\ConsoleConfiguration\\Tests\\": "tests/"
       }
    },
    "scripts": {
        "cs-check": "vendor/bin/ecs",
        "cs-fix": "vendor/bin/ecs --fix"

    }
}
